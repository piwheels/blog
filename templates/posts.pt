<div metal:use-macro="layout">
  <div metal:fill-slot="head" tal:omit-tag="1">
    <meta name="description" content="${description}" />
    <meta property="og:url" content="https://piwheels.org/${link}" />
    <meta property="og:title" content="${title}" />
    <meta property="og:description" content="${description}" />
    <meta name="twitter:title" content="${title}" />
    <meta name="twitter:description" content="${description}" />
  </div>

  <div metal:fill-slot="title" tal:omit-tag="1">${html_title}</div>

  <section metal:fill-slot="content">
    <div class="content">
      <h2>${title}</h2>
      <div class="small-12 medium-8 columns post" tal:repeat="post posts">
        <div class="postmeta">
        <time datetime="${post.published.isoformat(timespec='seconds')}" title="${post.published.isoformat(timespec='seconds')}">${post.published.strftime("%-d %B %Y")}</time> by ${post.author}
      </div>
        <h3 class="title"><a href="/${post.link}">${post.title}</a></h3>
        <p tal:content="structure post.excerpt"></p>
        <div class="callout primary tags">
          Tags: <a tal:repeat="tag post.tags" href="/tags/${tag}">${tag.replace("-", " ")}</a>
        </div>
      </div>
    </div>
  </section>
</div>