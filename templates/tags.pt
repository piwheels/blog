<div metal:use-macro="layout">
  <div metal:fill-slot="head" tal:omit-tag="1">
    <meta name="description" content="Tags index for the piwheels blog" />
    <meta property="og:url" content="https://bennuttall.com/tags/" />
    <meta property="og:title" content="${html_title}" />
    <meta property="og:description" content="${description}" />
    <meta name="twitter:title" content="${html_title}" />
    <meta name="twitter:description" content="${description}" />
  </div>

  <div metal:fill-slot="title" tal:omit-tag="1">${html_title}</div>

  <section metal:fill-slot="content">
    <div class="content no-sidebar">
      <h2>${title}</h2>
      <ul>
        <li tal:repeat="(tag, posts) tags.items()">
          <a href="/tags/${tag}/">${tag.replace("-", " ")}</a> (${len(posts)})
        </li>
      </ul>
  </section>
</div>