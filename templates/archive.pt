<div metal:use-macro="layout">
  <div metal:fill-slot="head" tal:omit-tag="1">
    <meta name="description" content="${description}" />
    <meta property="og:url" content="https://bennuttall.com/${link}/" />
    <meta property="og:title" content="${html_title}" />
    <meta property="og:description" content="${description}" />
    <meta name="twitter:title" content="${html_title}" />
    <meta name="twitter:description" content="${description}" />
  </div>

  <div metal:fill-slot="title" tal:omit-tag="1">${html_title}</div>

  <section metal:fill-slot="content">
    <div>
      <div class="row">
        <div class="small-12 columns">
          <h1>${title}</h1>
        </div>
      </div>
      <div class="row">
        <div class="small-12 medium-8 columns entry-content">
          <div tal:repeat="(year, posts) archive.items()">
            <h2><a href="/blog/${year}/">${year}</a></h2>
            <ul>
              <li tal:repeat="post posts">
                <a href="/${post.link}" tal:content="structure post.title" />
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>