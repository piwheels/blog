<div metal:use-macro="layout">
  <div metal:fill-slot="head" tal:omit-tag="1">
    <meta name="description" content="The piwheels blog archive" />
    <meta property="og:url" content="https://blog.piwheels.org/archive/" />
    <meta property="og:title" content="piwheels blog archive" />
    <meta property="og:description" content="The piwheels blog archive" />
    <meta name="twitter:title" content="piwheels blog archive" />
    <meta name="twitter:description" content="The piwheels blog archive" />
  </div>

  <div metal:fill-slot="title" tal:omit-tag="1">archive</div>

  <section metal:fill-slot="content">
    <div>
      <div class="row">
        <div class="small-12 columns">
          <h1>piwheels blog archive</h1>
        </div>
      </div>
      <div class="row">
        <div class="small-12 medium-8 columns entry-content">
          <div tal:repeat="(year, posts) archive.items()">
            <h2><a href="/${year}/">${year}</a></h2>
            <ul>
              <li tal:repeat="post posts">
                <a href="/${post.link}" tal:content="structure post.title" />
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>